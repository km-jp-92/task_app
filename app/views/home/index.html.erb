<div class="bg-white rounded-lg border shadow-lg p-5 w-full max-w-sm mx-auto">
  <!-- 説明文 -->
  <div class="mb-4 text-center">
    <p class="text-lg text-gray-500">
      シンプルなtodoリストです。
    </p>
  </div>

  <!-- Deviseログインフォーム -->
  <%= form_for(@user, url: user_session_path) do |f| %>
    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "block text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "block text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if @devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "ログイン状態を保持する", class: "text-gray-700" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "ログイン",
            class: "w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition-colors" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "新規登録", new_user_registration_path,
          class: "text-blue-500 hover:underline" %>
  </div>
</div>

