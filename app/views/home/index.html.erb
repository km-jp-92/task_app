<div class="bg-white rounded-3xl shadow-2xl p-12 w-full max-w-md">
    <!-- 説明文 -->
    <div class="mb-10 text-center space-y-4">
      <h1 class="text-4xl font-extrabold text-blue-600">
        タスクトレイン 🚂
      </h1>
      <p class="text-xl font-semibold text-purple-700">
        タスクを列車旅に変えて、ゴールを目指すアプリです。
      </p>
      <p class="text-lg text-pink-600">
        完了するたび列車が進み、3つのタスクごとに駅に到着。
      </p>
      <p class="text-lg text-green-600">
        計画的にタスクを管理し、ゴールを目指しましょう。
      </p>
    </div>

    <!-- Deviseログインフォーム -->
    <%= form_for(@user, url: user_session_path) do |f| %>
      <div class="mb-6">
        <%= f.label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-2 border-blue-300 rounded-xl p-4 text-lg focus:ring-4 focus:ring-blue-200 transition" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, "パスワード", class: "block text-lg font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-2 border-pink-300 rounded-xl p-4 text-lg focus:ring-4 focus:ring-pink-200 transition" %>
      </div>

      <% if @devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me, class: "mr-3 h-5 w-5 accent-blue-500" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "text-gray-700 text-lg" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン", class: "w-full bg-gradient-to-r from-blue-400 via-pink-400 to-yellow-400 text-white font-bold py-4 rounded-xl text-xl shadow-lg hover:scale-105 transform transition" %>
      </div>
    <% end %>
</div>
