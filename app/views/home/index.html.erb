<div class="bg-white rounded-3 border shadow-lg p-5 w-100 mx-auto" style="max-width: 400px;">
  <!-- 説明文 -->
  <div class="mb-4 text-center">
    <p class="h5 text-secondary">
      タスクを列車旅に変えて、ゴールを目指すアプリです。
    </p>
    <p class="h6 text-danger">
      完了するたび列車が進み、3つのタスクごとに駅に到着。
    </p>
    <p class="h6 text-success">
      計画的にタスクを管理し、ゴールを目指しましょう。
    </p>
  </div>

  <!-- Deviseログインフォーム -->
  <%= form_for(@user, url: user_session_path) do |f| %>
    <div class="mb-4">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if @devise_mapping.rememberable? %>
      <div class="mb-4 form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "新規登録", new_user_registration_path, class: "btn btn-link d-block text-center" %>
  </div>
</div>
