<div class="container mx-auto px-4 py-8">
  <div class="text-right p-2">
    <turbo-frame id="completed_count">
      累計完了タスク数：<%= current_user.tasks.completed.count %> 件
    </turbo-frame>
  </div>

  <p class="mb-6 text-center">
    <%= link_to "新規Todo作成", new_task_path, class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition" %>
  </p>

  <div id="tasks" class="space-y-4">
    <%= render @tasks %>
  </div>
</div>