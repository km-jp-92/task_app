<%= form_with model: task,
              local: true,
              data: { turbo: false } do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :due_date %>
      <%= f.date_field :due_date %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>